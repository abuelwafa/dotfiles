root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100
trim_trailing_whitespace = true

[{*.sh}]
indent_style = tab

[{*.json}]
indent_size = 4
tab_width = 4

[{*.yml}]
indent_size = 4
tab_width = 4

# Windows files
[*.bat]
end_of_line = crlf
