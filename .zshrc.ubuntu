#!/bin/zsh

# Android SDK path installed by Android Studio
export ANDROID_HOME="$HOME/Android/Sdk"

source ~/projects/dotfiles/.zshrc

alias shutdown='sudo shutdown & exit'
alias restart='sudo shutdown -r & exit'
alias reboot='sudo shutdown -r & exit'

if [ "$TERM" = "xterm" ]; then
    export TERM=xterm-256color
fi

alias open='xdg-open'
alias copy='xclip -i -selection clipboard'

stty -ixon
